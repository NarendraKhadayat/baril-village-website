{
  "version": 2,
  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
     { "src": "css/*.css", "use": "@vercel/static" },
    { "src": "js/*.js", "use": "@vercel/static" },
    { "src": "api/submit.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/css/(.*)", "dest": "/css/$1" },
    { "src": "/js/(.*)", "dest": "/js/$1" },
    { "src": "/images/(.*)", "dest": "/images/$1" },
    { "src": "/api/submit", "dest": "/api/submit" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}